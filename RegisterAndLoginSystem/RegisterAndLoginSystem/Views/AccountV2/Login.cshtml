@model RegisterAndLoginSystem.Models.LoginUser
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using ( Html.BeginForm("Login", "AccountV2") )
{
    <div class="form-group">
        @Html.LabelFor(user => user.Email)
        @Html.TextBoxFor(user => user.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(user => user.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(user => user.Password)
        @Html.PasswordFor(user => user.Password, new { @class = "form-control", type = "Password" })
        @Html.ValidationMessageFor(user => user.Password)
    </div>

    @Html.HiddenFor(user => user.Id)

    <button type="submit" class="btn btn-primary">Login</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

